{
  "manifest_version": 3,
  "name": "Stream Plus",
  "version": "5.1.1",
  "description": "Stream Plus (redesign) \u2014 overlay, sleep timer, smart skippers (including robust Next Episode), and beta helpers.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.plex.tv/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.plex.tv/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options.html"
}